{
    "manifest_version": 2,
    "name": "SimplyWrite",
    "version": "1.0",
    "description": "Take Quick and Minimalistic Notes",
    "browser_action": {
      "default_icon": {
        "16": "DisplayIcons/16.png",  
        "48": "DisplayIcons/48.png",  
        "128": "DisplayIcons/128.png" 
      },
      "default_popup": "main.html"
    },
    "permissions": ["storage"],
    "icons": {
      "16": "DisplayIcons/16.png",    
      "48": "DisplayIcons/48.png",   
      "128": "DisplayIcons/128.png"  
    }
}
  